#include<stdio.h>
#include<stdlib.h>
#include<math.h>
int main(){
    int n,i;
    scanf("%d",&n);

    double A[n][2];
    int m[n];
    for(i=0;i<n;i++){
        scanf("%lf %lf %d",&A[i][0],&A[i][1],&m[i]);
    }

    double time=0.0;
    for(i=0;i<n;i++){
        time=time+m[i]*1.5+(sqrt(A[i][0]*A[i][0]+A[i][1]*A[i][1])*2)/50;
        
    }
    int v=(int)ceil(time);
    printf("%d",v);
    return 0;
}
