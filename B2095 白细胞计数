#include <stdio.h>
float ma(float a,float b)
{
    if(a>b) return a;
    else return b;
}
int main()
{
    int n,a,b;
    scanf("%d",&n);
    float A[n];
    for(int i=0;i<n;i++)
    {
        scanf("%f",&A[i]);
    }
    float max=A[0];
    a=0;
    b=0;
    float min;
    for(int i=0;i<n;i++)
    {
        if(max<A[i])
        {
            a=i;
            max=A[i];
        }
        if(min>=A[i])
        {
            b=i;
            min=A[i];
        }
    }
    float sum=0.0;
    for(int i=0;i<n;i++)
    {
        if(i==a||i==b) continue;
        sum+=A[i];
    }
    float ave=sum/(n-2);
    float qwe,ewq;
    if(a==0||b==0||a==1||b==1)
    {
        qwe=A[2];
        ewq=A[2];
    }
    else{
        qwe=A[0];
        ewq=A[0];
    }
    for(int i=0;i<n;i++)
    {
        if(i==a||i==b) continue;
        if(qwe<A[i])
        {
            qwe=A[i];
        }
        if(ewq>A[i]) 
        {
            ewq=A[i];
        }
    }
    float c=qwe-ave;
    float d=ave-ewq;
    printf("%.2f %.2f",ave,ma(c,d));
    return 0;
}
